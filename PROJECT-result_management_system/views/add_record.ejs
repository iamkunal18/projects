<!--Main Site-->
<main class="mt-4">
    <div class="container text-center">
        <div class="form-title ">
            <h2 class="text-dark">Add new Result</h2>
            <span class="text-danger"> <b>Use the below form to add new result for students</b></span>
        </div>
        <!--add record form-->
            <form method="POST" id="add_record" class="form-box">
              
                    <div class="form-group mt-1">
                        <label><b>Roll No: </b></label>
                        <input type="number" name="rollno" id="rollno" class="form-control mb-1" placeholder="Enter student's rollno" required>     
                    </div>
                    <div class="form-group mt-1">
                        <label><b>Name: </b></label>
                        <input type="text" name="name" id="name" class="form-control mb-1" placeholder="Enter student's name" required>     
                    </div>
                    <div class="form-group mt-1">
                        <label><b>Date of Birth: </b></label>
                        <input type="date" name="dob" id="dob" class="form-control mb-1" placeholder="Enter student's dob" required>     
                    </div>
                    <div class="form-group mt-1">
                        <label><b>Maximum marks: </b></label>
                        <input type="number" name="maxmarks" id="maxmarks" class="form-control mb-1" placeholder="Enter Max marks" required>     
                    </div>
                    <div class="form-group mt-1">
                        <label><b>Obtained marks: </b></label>
                        <input type="number" name="obtainedmarks" id="obtainedmarks" class="form-control mb-1" placeholder="Enter student's obtained marks" required>     
                    </div>
                    <span><b>Want to show all records?  </b> <a href="teacher-home" ><b> Get all Records</b></a></span>
                    <br/> <br/>
                    <button type="submit" class="btn btn-success">Add Record</button>
            </form>
                    
        <!--add record form-->
    </div>
</main>
